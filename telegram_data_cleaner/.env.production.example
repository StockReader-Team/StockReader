# ==============================================
# Database Configuration
# ==============================================
DB_USER=telegram_user
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123
DB_NAME=telegram_data

DATABASE_URL=postgresql+asyncpg://telegram_user:CHANGE_THIS_STRONG_PASSWORD_123@postgres:5432/telegram_data
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# ==============================================
# Redis Configuration
# ==============================================
REDIS_URL=redis://redis:6379/0
REDIS_CACHE_TTL=3600

# ==============================================
# External API Configuration
# ==============================================
API_URL=http://103.75.197.239:3000/api/all-messages
API_TOKEN=telegramreader-api-token-2025
API_TIMEOUT=60

# ==============================================
# Polling Configuration
# ==============================================
POLLING_INTERVAL=180
BATCH_SIZE=100

# ==============================================
# Application Configuration
# ==============================================
LOG_LEVEL=INFO
HISTORY_DAYS=15
ENVIRONMENT=production

# ==============================================
# FastAPI Configuration
# ==============================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# ==============================================
